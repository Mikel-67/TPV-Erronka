<UserControl x:Class="Erronka1.Bistak.Views.StockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="600">

    <Grid>
        <TextBlock Text="📦 Stock-a"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>
        <DataGrid x:Name="dgStock"
                  Margin="0,50,0,60"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Izena" Binding="{Binding Izena}" Width="200"/>
                <DataGridTextColumn Header="Prezioa(€)" Binding="{Binding Prezioa}" Width="100"/>
                <DataGridTextColumn Header="Kantitatea" Binding="{Binding Stocka}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom">
            <Button Content="Gehitu" Width="90" Margin="5" Click="GehituStock"/>
            <Button Content="Aldatu" Width="90" Margin="5" Click="EditatuStock"/>
            <Button Content="Ezabatu" Width="90" Margin="5" Click="EzabatuStock"/>
        </StackPanel>
    </Grid>
</UserControl>
