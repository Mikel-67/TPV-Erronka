<Window x:Class="Erronka1.Bistak.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Erronka1.Bistak"
        xmlns:views="clr-namespace:Erronka1.Bistak.Views"
        Title="Panel de Administración"
        Height="600"
        Width="950"
        Background="#f0f2f5">

    <Window.Resources>
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              Margin="10,0,0,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#353b48"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#40739e"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="#2f3640" VerticalAlignment="Stretch">
            <TextBlock Text="🛠️ Admin Panel"
                       Foreground="White"
                       FontSize="20"
                       Margin="20,30,0,30"/>
            <Button Content="📦 Stock-a"
                    Tag="Stock-a"
                    Click="BtnStocka"
                    Style="{StaticResource SidebarButtonStyle}"/>
            <Button Content="👥 User-ak"
                    Tag="User-ak"
                    Click="BtnUserrak"
                    Style="{StaticResource SidebarButtonStyle}"/>

            <StackPanel VerticalAlignment="Bottom" Margin="0,30,0,20">
                <Separator Margin="10"/>
                <Button Content="🚪 Sesioa Itxi"
                        Click="SesioaItxi"
                        Style="{StaticResource SidebarButtonStyle}"/>
            </StackPanel>
        </StackPanel>

        <ContentControl x:Name="Zeerenda"
                        Grid.Column="1"
                        Margin="20"/>
    </Grid>
</Window>
