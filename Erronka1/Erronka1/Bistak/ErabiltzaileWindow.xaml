<Window x:Class="Erronka1.Bistak.ErabiltzaileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Erronka1.Bistak"
        mc:Ignorable="d"
        Title="ErabiltzaileWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                <Button Content="TPV" Width="100" Margin="5"/>
                <Button Content="Erreserba" Width="100" Margin="5" Click="erreserbaPantaila"/>
            </StackPanel>

            <DataGrid x:Name="dgProductosSeleccionados" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Izena" Binding="{Binding Izena}" Width="*"/>
                    <DataGridTextColumn Header="Prezioa (€)" Binding="{Binding Prezioa}" Width="80"/>
                    <DataGridTextColumn Header="Kantitatea" Binding="{Binding Kantitatea}" Width="80"/>
                    <DataGridTextColumn Header="Guztira" Binding="{Binding Guztira}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Botones acción -->
            <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right">
                <Button Content="Borrar Seleccionado" Width="150" Margin="5" Click="AutatuaEzabatu"/>
                <Button Content="Imprimir / Pagar" Width="150" Margin="5" Click="ImprimatuTicketa"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                <Button Content="Edariak" Width="100" Margin="5"/>
                <Button Content="Jatekoak" Width="100" Margin="5"/>
                <Button Content="Postreak" Width="100" Margin="5"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <UniformGrid x:Name="wpProduktuak" 
                 Columns="3" 
                 Rows="0"
                 Margin="5"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"/>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
