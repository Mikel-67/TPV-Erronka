<Window x:Class="Erronka1.Bistak.Views.ErreserbaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Erreserba" Height="450" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Selección de fecha -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Data:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker x:Name="dpData" SelectedDate="{x:Static sys:DateTime.Now}" Width="150"/>
        </StackPanel>

        <!-- Contenedor de mesas -->
        <GroupBox Grid.Row="1" Header="Mahaiak Libre" Margin="0,0,0,10">
            <StackPanel>
                <ScrollViewer Height="250">
                    <WrapPanel x:Name="wpMahaiak" Margin="5"/>
                </ScrollViewer>
                <TextBlock x:Name="tbInfo" Foreground="Gray" Margin="5,5,0,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnEzeztatu" Content="Ezeztatu" Width="90" Margin="0,0,10,0" Click="BtnEzeztatu_Click"/>
            <Button x:Name="btnErreserbatu" Content="Erreserbatu" Width="100" Click="BtnErreserbatu_Click"/>
        </StackPanel>
    </Grid>
</Window>
